# Database Configuration (Your Railway Postgres URL)
DATABASE_URL=postgresql://user:password@host:port/database

# Storage Configuration (Cloudflare R2 / S3)
R2_ENDPOINT_URL=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=erp-backups

# Backup Schedule (Cron Syntax)
# Example: Every day at 3:00 AM UTC
BACKUP_CRON_HOUR=3
BACKUP_CRON_MINUTE=0

# Security (Optional Basic Auth for Admin UI)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=securepassword
